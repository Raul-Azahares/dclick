<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="import_employees_form" name="Formulario de ImportaciÃ³n de Empleados">
        <t t-call="web.layout">
            <div class="container">
                <h3>Import Employees from Excel</h3>
                <form method="post" enctype="multipart/form-data" action="/import/employees">
                    <t t-token="request.csrf_token()"/>
                    <input type="file" name="file" accept=".xlsx,.xls" required="required"/>
                    <br/><br/>
                    <button type="submit" class="btn btn-primary">Importar</button>
                </form>
            </div>
        </t>
    </template>


    <record id="action_import_employees" model="ir.actions.act_window">
        <field name="name">Importar Empleados</field>
        <field name="view_mode">form</field>
        <field name="res_model">hr.employee</field>
        <field name="views"><tree/></field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_import_employees" name="Importar Empleados" parent="base.menu_custom" action="action_import_employees"/>
</odoo>